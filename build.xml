<?xml version="1.0"?>

<project name="JWildfire" basedir="." default="packageDist">

  <property name="dist.dir" location="build/dist" />
	<property name="build.dir" location="build/classes" />
	<property name="lib.dir" location="lib" />
	<property name="src.dir" location="src/" />
	<property name="jar.name" value="build/j-wildfire.jar" />
  <property name="dist.name" value="build/j-wildfire.zip" />
	
	<path id="build.classpath">
		<fileset dir="${lib.dir}">
			<include name="*.jar" />
		</fileset>
		<pathelement path="${build.dir}" />
	</path>


	<target name="init">
      <delete dir="${build.dir}" />
  		<mkdir dir="${build.dir}" />
    <delete dir="${dist.dir}" />
    <mkdir dir="${dist.dir}" />
	</target>
<!--
	<target name="compile" depends="init" 
	        description="Compile main source tree java files">
		<javac destdir="${build.dir}"
		       target="1.6"
		       source="1.6"
		       debug="true"
		       deprecation="false"
           encoding="ISO-8859-1"
		       optimize="false"
		       failonerror="true">
			<src path="${src.dir}" />
			<classpath refid="build.classpath" />
		</javac>
	</target>
-->
  <target name="compile" depends="init" 
          description="Compile main source tree java files">
    <javac destdir="${build.dir}"
           target="1.6"
           source="1.6"
           debug="false"
           deprecation="false"
           encoding="ISO-8859-1"
           optimize="true"
           failonerror="true">
      <src path="${src.dir}" />
      <classpath refid="build.classpath" />
    </javac>
  </target>
	
	<target name="packageJar" depends="compile" description="Package the jar file">
		<jar destfile="${jar.name}">
			<fileset dir="${build.dir}" includes="org/jwildfire/"/>
      <fileset dir="${src.dir}" includes="com/**/*.properties"/>
      <fileset dir="${src.dir}" includes="com/**/*.gif"/>
      <fileset dir="${src.dir}" includes="org/jwildfire/**/*.xml"/>
      <fileset dir="${src.dir}" includes="org/jwildfire/**/*.html"/>
      <fileset dir="${src.dir}" includes="org/jwildfire/swing/icons/*.gif"/>
      <fileset dir="${build.dir}" includes="com/"/>
      <fileset dir="${build.dir}" includes="odk/"/>
      <zipfileset src="lib/jep-2.4.1.jar"/>
      <zipfileset src="lib/sunflow.jar"/>
      <zipfileset src="lib/janino.jar"/>
      <zipfileset src="lib/JTattoo.jar"/>
      <manifest>
        <attribute name="Main-Class" value="org.jwildfire.swing.Desktop"/>
      </manifest>			
		</jar>
	</target>

  <target name="packageDist" depends="packageJar" description="Package the distributable zip file">
    <copy todir="${dist.dir}/lib">
       <fileset file="${jar.name}"/>
     </copy>  	
    <copy todir="${dist.dir}/">
       <fileset dir="build/appstart" includes="start.jar start.sh start.bat appstart.properties"/>
     </copy>    
    <copy todir="${dist.dir}/">
       <fileset file="CHANGES.txt" />
     </copy>    
    <jar destfile="${dist.name}">
      <fileset dir="${dist.dir}/"/>
    </jar>
  </target>

</project>